<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.cgteam.bubblesparty.menu.MainMenu" >
    
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="42sp" />
    
    <Button
        android:id="@+id/buttonInfinite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="125dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/infinite_mode" />

    <Button
        android:id="@+id/buttonClassic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="125dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonInfinite"
        android:layout_marginTop="20dp"
        android:text="@string/classic_mode" />

    <Button
        android:id="@+id/buttonQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="85dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="@string/quit"
        android:onClick="quit" />

    <TextView
        android:id="@+id/textVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/version_name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#242424" />
    
    <ViewFlipper
        android:id="@+id/slideGameMode"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        android:layout_margin="6dip"
        android:layout_alignParentTop="true"
        android:layout_marginTop="166dp" >
        
        <!--  Layout 1 for 1st Screen -->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="This Is Screen 1"
                    android:textColor="#191975"
                    android:textSize="25dp"
                    android:textStyle="bold" >
                </TextView>
                
        </LinearLayout>
        
        <!--  Layout 2 for 2nd Screen -->
            
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Is Screen 2"
                    android:textColor="#191975"
                    android:textSize="25dp"
                    android:textStyle="bold" >
                </TextView>
            
        </LinearLayout>

    </ViewFlipper>

</RelativeLayout>
